<section id="feed">
  <div class="container">
    <div class="col-md-12">
      <!--:class => 'post_form margin-bottom-0'-->
      <%= form_for @post, url: {action: "create"} do |f| %>
          <div class="form-group">
            <%= f.text_area :post, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.submit class: 'form-control' %>
          </div>
      <% end %>
      <div class="col-md-12">
        <ul class="timeline-list">

          <% @user_post.each do |post| %>
              <li class="media media-clearfix-xs" id="october">
                <div class="media-left">
                  <div class="user-wrapper">
                    <img src="http://placehold.it/80x80" alt="people" class="img-circle" width="80">
                    <div><a href="#"><%=     @users.find(post.user_id).fname + " "+
                                             @users.find(post.user_id).lname[0]+"."%></a></div>
                    <div class="date"><%= post.created_at.strftime("%d") + " "+
                                              post.created_at.strftime("%b")%></div>
                  </div>
                </div>
                <div class="media-body">
                  <div class="media-body-wrapper">
                    <div class="panel panel-default">

                      <div class="panel-body">
                        <p><%= post.post %> </p>
                      </div>
                      <div class="view-all-comments">
                        <a href="#">
                          <i class="fa fa-comments-o"></i> View all
                        </a>
                        <span>10 comments</span>

                      </div>
                      <ul class="comments">
                        <li class="media">
                          <div class="media-left">
                            <a href="">
                              <img src="http://placehold.it/80x80" class="media-object">
                            </a>
                          </div>
                          <div class="media-body">
                            <div class="pull-right dropdown" data-show-hover="li" style="display: none;">
                              <a href="#" data-toggle="dropdown" class="toggle-button">
                                <i class="fa fa-pencil"></i>
                              </a>
                              <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Edit</a></li>
                                <li><a href="#">Delete</a></li>
                              </ul>
                            </div>
                            <a href="" class="comment-author pull-left">Bill D.</a>
                            <span>Hi Mary, Nice Party</span>
                            <div class="comment-date">21st September</div>
                          </div>
                        </li>
                        <li class="comment-form">
                          <div class="input-group">
                      <span class="input-group-btn">
                         <a href="" class="btn btn-default"><i class="fa fa-photo"></i></a>
                      </span>
                            <input type="text" class="form-control">
                          </div>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </li>
          <% end %>

        </ul>
      </div>
    </div>
  </div>
</section>