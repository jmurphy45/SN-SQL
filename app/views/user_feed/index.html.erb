
<div class="timeline row card-columns" data-isotope='{ "itemSelector": ".item", "masonry": {"layoutMode": "packery" } }'>
  <div class="col-xs-12 col-md-6 col-lg-4 item">
    <%= render 'posts/form', post: @post %>
  </div>
  <% @posts.each do |post| %>
      <div class="col-xs-12 col-md-6 col-lg-4 item" >
        <div class="timeline-block">
          <div class="panel panel-default">
            <div class="panel-heading">
              <div class="media">
                <div class="media-left">
                  <a href="">
                    <img src="http://placehold.it/50x50" class="media-object">
                  </a>
                </div>
                <div class="media-body">
                  <a href="#" class="pull-right text-muted"><i class="icon-reply-all-fill fa fa-2x "></i></a>

                  <a href=""><%= post.user.first_name + " " + post.user.last_name if post.user%></a>

                  <span><%= (post.created_at).to_formatted_s(:short) %></span>
                </div>
              </div>
            </div>


            <div class="panel-body">
              <p><%= post.user_post %></p>
            </div>



            <div class="view-all-comments">
              <%= commontator_thread(post) %>
            </div>

          </div>
        </div>
      </div>




  <% end %>
</div>

