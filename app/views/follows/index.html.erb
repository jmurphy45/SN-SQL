<h3>All Users</h3>
<br>
<div class="container">
  <table class="table table-striped">
    <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Follow</th>
    </thead>
    <tbody>
    <% @users.try(:each) do |user| %>
        <tr>
          <td><%= link_to user.first_name + " " + user.last_name,show_user_path(user.id) %></td>
          <td><%= user.email %></td>
          <td>
            <% if follow = user.follows.find_by(follows: user.id) %>
                <%= link_to 'Unfollow', follow_path(follow_rec(current_user, user)), method: :delete %>

            <% else %>
                <%= link_to 'Follow', follows_path({user_id: user.id}), method: 'post',class: "btn btn-primary"  %>
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
